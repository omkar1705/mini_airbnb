<% layout("/layouts/boilerplate") %>
    <% if (flash.success) { %>
        <div class="alert alert-warning alert-dismissible fade show col-6 offset-3" id="flash-message" role="alert">
            <%= flash.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
            <% if (flash.error) { %>
                <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" id="flash-message"
                    role="alert">
                    <%= flash.error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>
                    <div class="row nav_filter">
                        <div class="filters_listing col-9">
