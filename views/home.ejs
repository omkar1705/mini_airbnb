                                <div><img
                                        src="	https://a0.muscache.com/pictures/677a041d-7264-4c45-bb72-52bff21eb6e8.jpg"
                                        alt="pools">
                                </div>
                                <span>Lackfront</span>
                            </div>
                        </div>
                        <button type="button" class="tax-btn col">
                            <div class="form-check-reverse form-switch dis_tax" id="dis_tax">
                                <label class="form-check-label" for="flexSwitchCheckReverse">Display Taxes</label>
                                <input class="form-check-input check" type="checkbox" id="flexSwitchCheckReverse">
                            </div>
                        </button>
                    </div>
                    <hr>
                    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
                        <% for (const listing of listings) { %>
                            <a href="/listing/<%=listing._id%>" class="card-a">
                                <div class="card col" style="width: 20rem;">
                                    <img src="<%= listing.image.url%>" class="card-img-top"
                                        alt="<%= listing.image.filename%>" style="height: 20rem;">
                                    <div class="card-body">
                                        <p class="card-text">
                                        <div class="card-title">
                                            <b>
                                                <%=listing.title%>
                                            </b>
                                        </div>
                                        <hr>
                                        <div class="card-des">
                                            <%=listing.description%>
                                        </div>
                                        <div class="card-price">
                                            &#8377 <%=listing.price.toLocaleString('en-IN')%>
                                                <i class="tax">&nbsp;&nbsp;+18% GSt</i>
                                        </div>
                                        </p>
                                    </div>
                                </div>
                            </a>
                            <% } %>
                    </div>